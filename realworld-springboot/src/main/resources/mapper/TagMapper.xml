<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.realworld.api.mapper.TagMapper">
    <select id="findTagNamesByArticleId" resultType="java.lang.String">
        SELECT t.tag_name
        FROM tags t
                 JOIN articles_tags at
        ON at.tag_id = t.id
        WHERE at.article_id = #{articleId}
    </select>
</mapper>